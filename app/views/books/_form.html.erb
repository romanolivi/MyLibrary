<%= form_for(@book) do |a| %> 
    
    <%= a.label :name %><br>
    <%= a.text_field :name %><br> 

    <br>

    <%= a.label :author %><br>
    <%= a.text_field :author %><br> 

    <br>

    <%= a.label :genre %><br>
    <%= a.text_field :genre %><br> 

    <br>

    <%= a.label :page_count %><br>
    <%= a.number_field :page_count %><br>

    <br>

    <%= a.button "Submit" %> 

<% end %> 
