<%= form_for(@review) do |r| %> 
    <%= r.label :stars %> 
    <%= r.number_field :stars %> 

    <%= r.label :content %> 
    <%= r.text_area :content %> 

    <%= r.hidden_field :user_id, value: current_user.id %> 

    <%= r.hidden_field :book_id %> 

    <%= r.submit "Submit" %> 
    
<% end %> 
