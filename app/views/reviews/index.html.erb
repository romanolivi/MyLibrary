<ul>
<% @reviews.each do |r| %>
  <li>Book: <%= book_link(r) %></li>
      Stars: <%= link_to "#{r.stars} stars", user_review_path(r.user, r) %><br>
      Message: <%= r.content %><br>
      <%= link_to 'Edit Review', edit_user_review_path(r.user, r) if current_user == r.user %> 
      <br><br>
<% end %>
</ul>
<br>

<%= form_tag(user_reviews_path(current_user), :method => :get) do %> 
  <label>Select a number to filter reviews:</label>
  <input type="number" name="stars" min="1" max="5"> 
  <br>
  <input type="Submit" value="Filter">
<% end %> 

<br><br>

<%= link_to 'Home Page', user_path(current_user) %>

